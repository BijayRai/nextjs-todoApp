{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "server": "node server.js",
    "jest": "jest",
    "jest:watch": "npm run jest -- --watch --no-cache",
    "test": "mocha --reporter spec __tests__/**/*.test.js",
    "test:watch": "npm run test -- --watch",
    "dev": "next",
    "build": "next build",
    "watch": "nodemon server.js -w server.js",
    "start": "next start",
    "heroku-postbuild": "heroku-nextjs-build",
    "lint": "standard --verbose"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "engines": {
    "node": "6.9.x"
  },
  "cacheDirectories": [
    "nextjs/node_modules"
  ],
  "dependencies": {
    "@mars/heroku-nextjs-build": "^2.0.0",
    "next": "^2.2.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "redux-devtools-extension": "^2.13.2",
    "colors": "^1.1.2",
    "enzyme": "^2.8.2",
    "expect": "^1.20.2",
    "jest": "^19.0.2",
    "mocha": "^3.3.0",
    "npm-run-all": "^4.0.2",
    "standard": "^10.0.2",
    "supertest": "^3.0.0"
  },
  "author": "Spencer Bigum",
  "license": "ISC"
}
